<h1> Choose Comment on a Post</h1>
<table border="1" style="width:100%">
   <tr>
    <td><h3>Select One</h3></td>    
   	<td><h3>Writer</h3></td>
    <td><h3>Title</h3></td>
    <td><h3>Body</h3></td>
  </tr>
<% @listposts.each do |w| %>
<tr>
	<td><%= w.user.username %></td>
	<td><%= w.title %></td>   
	<td><%= w.body %></td>
</tr>
<%end%>
</table>


